{
  "compilerOptions": {
      "outDir": "./built/",
      "sourceMap": true,
      "strict": true,
      // "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "es2015",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "target": "es5",
      "resolveJsonModule": true,
      "lib": [
        "es2016",
        "dom"
    ]
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
    "/node_modules"
  ]
}